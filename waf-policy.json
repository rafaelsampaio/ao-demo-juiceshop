{
   "$schema": "https://clouddocs.f5.com/products/waf-declarative-policy/_downloads/1ea282907775c0a30240d3d5da4c2708/schema_v16_1.json",
   "policy": {
      "name": "juiceshop-waf-policy",
      "description": "Juice Shop WAF Policy",
      "template": {
         "name": "POLICY_TEMPLATE_RAPID_DEPLOYMENT"
      },
      "type": "security",
      "softwareVersion": "16.1.3",
      "enablePassiveMode": false,
      "enforcementMode": "transparent",
      "applicationLanguage": "utf-8",
      "protocolIndependent": false,
      "caseInsensitive": true,
      "general" : {
         "trustXff" : true
      },
      "policy-builder" : {
         "autoApply" : {
            "frequency" : "real-time"
         },
         "learningMode" : "automatic"
      },
      "policy-builder-server-technologies" : {
         "enableServerTechnologiesDetection" : true
      },
      "blocking-settings": {
         "evasions": [
            {
               "description": "Apache whitespace",
               "enabled": true
            },
            {
               "description": "IIS Unicode codepoints",
               "enabled": true
            },
            {
               "description": "Multiple decoding",
               "enabled": true,
               "maxDecodingPasses": 3
            },
            {
               "description": "%u decoding",
               "enabled": true
            },
            {
               "description": "Directory traversals",
               "enabled": true
            },
            {
               "description": "Bad unescape",
               "enabled": true
            },
            {
               "description": "Bare byte decoding",
               "enabled": true
            },
            {
               "description": "IIS backslashes",
               "enabled": true
            }
         ],
         "violations": [
            {
               "name": "VIOL_ASM_COOKIE_HIJACKING",
               "alarm": true,
               "block": true
            },
            {
               "name": "VIOL_FILETYPE",
               "alarm": true,
               "block": true
            },
            {
               "name": "VIOL_LOGIN_URL_BYPASSED",
               "alarm": true,
               "block": true,
               "learn": true
            },
            {
               "name": "VIOL_PARAMETER_NAME_METACHAR",
               "alarm": true,
               "block": true
            },
            {
               "name": "VIOL_PARAMETER_VALUE_METACHAR",
               "alarm": true,
               "block": true
            },
            {
               "name": "VIOL_POST_DATA_LENGTH",
               "alarm": true,
               "block": true
            },
            {
               "name": "VIOL_QUERY_STRING_LENGTH",
               "alarm": true,
               "block": true
            },
            {
               "name": "VIOL_REQUEST_LENGTH",
               "alarm": true,
               "block": true
            },
            {
               "name": "VIOL_URL_LENGTH",
               "alarm": true,
               "block": true
            }
         ]
      },
      "brute-force-attack-preventions": [
         {
            "captchaBypassCriteria": {
               "action": "alarm-and-drop",
               "enabled": true,
               "threshold": 5
            },
            "clientSideIntegrityBypassCriteria": {
               "action": "alarm-and-captcha",
               "enabled": true,
               "threshold": 3
            },
            "detectionCriteria": {
               "action": "alarm-and-captcha",
               "credentialsStuffingMatchesReached": 100,
               "detectCredentialsStuffingAttack": true,
               "detectDistributedBruteForceAttack": true,
               "failedLoginAttemptsRateReached": 100
            },
            "leakedCredentialsCriteria": {
               "action": "alarm-and-blocking-page",
               "enabled": false
            },
            "loginAttemptsFromTheSameDeviceId": {
               "action": "alarm-and-captcha",
               "enabled": false,
               "threshold": 3
            },
            "loginAttemptsFromTheSameIp": {
               "action": "alarm-and-captcha",
               "enabled": true,
               "threshold": 20
            },
            "loginAttemptsFromTheSameUser": {
               "action": "alarm-and-captcha",
               "enabled": true,
               "threshold": 3
            },
            "measurementPeriod": 900,
            "preventionDuration": 3600,
            "reEnableLoginAfter": 3600,
            "sourceBasedProtectionDetectionPeriod": 3600,
            "url": {
               "method": "*",
               "name": "/#/login",
               "protocol": "http",
               "type": "explicit"
            }
         }
      ],
      "data-guard": {
         "enabled": true,
         "creditCardNumbers": true,
         "lastCcnDigitsToExpose": 4,
         "usSocialSecurityNumbers": true,
         "lastSsnDigitsToExpose": 4,
         "customPatterns": false,
         "exceptionPatterns": false,
         "fileContentDetection": false,
         "maskData": true,
         "enforcementMode": "ignore-urls-in-list",
         "enforcementUrls": [
            "/rest/languages"
         ]
      },
      "filetypes": [
         {
            "name": "no_ext",
            "allowed": true,
            "checkPostDataLength": false,
            "checkQueryStringLength": false,
            "checkRequestLength": false,
            "checkUrlLength": false,
            "performStaging": false,
            "responseCheck": false,
            "type": "explicit"
         }
      ],
      "ip-intelligence": {
         "enabled": true,
         "ipIntelligenceCategories": [
            {
               "category": "Spam Sources",
               "alarm": false,
               "block": false
            },
            {
               "category": "Cloud-based Services",
               "alarm": true,
               "block": false
            },
            {
               "category": "Mobile Threats",
               "alarm": false,
               "block": false
            },
            {
               "category": "Tor Proxies",
               "alarm": true,
               "block": false
            },
            {
               "category": "Windows Exploits",
               "alarm": false,
               "block": false
            },
            {
               "category": "Web Attacks",
               "alarm": true,
               "block": false
            },
            {
               "category": "BotNets",
               "alarm": true,
               "block": false
            },
            {
               "category": "Scanners",
               "alarm": true,
               "block": false
            },
            {
               "category": "Denial of Service",
               "alarm": true,
               "block": false
            },
            {
               "category": "Infected Sources",
               "alarm": false,
               "block": false
            },
            {
               "category": "Phishing Proxies",
               "alarm": false,
               "block": false
            },
            {
               "category": "Anonymous Proxy",
               "alarm": true,
               "block": false
            }
         ]
      },
      "login-enforcement": {
         "authenticatedUrls": [
            "/#/privacy-security/",
            "/#/wallet"
         ]
      },
      "login-pages": [
         {
            "authenticationType": "form",
            "usernameParameterName": "email",
            "passwordParameterName": "password",
            "url": {
               "method": "*",
               "name": "/#/login",
               "protocol": "http",
               "type": "explicit"
            },
            "accessValidation": {
               "responseHttpStatus": "200",
               "responseContains": "token",
               "responseOmits": "Invalid"
            }
         }
      ],
      "response-pages": [
         {
            "ajaxActionType": "alert-popup",
            "ajaxEnabled": true,
            "ajaxPopupMessage": "Not today, hacker! Your support ID is: <%TS.request.ID()%>",
            "responsePageType": "ajax"
         }
      ],
      "server-technologies": [
         {
            "serverTechnologyName": "AngularJS"
         },
         {
            "serverTechnologyName": "Express.js"
         },
         {
            "serverTechnologyName": "JavaScript"
         },
         {
            "serverTechnologyName": "MongoDB"
         },
         {
            "serverTechnologyName": "Node.js"
         },
         {
            "serverTechnologyName": "SQLite"
         },
         {
            "serverTechnologyName": "jQuery"
         }
      ],
      "session-tracking": {
         "blockAll" : {
            "checkDeviceIdThreshold" : true,
            "checkIpThreshold" : true,
            "checkPeriod" : true,
            "checkSessionThreshold" : true,
            "checkUsernameThreshold" : true,
            "deviceIdThreshold" : 30,
            "ipThreshold" : 60,
            "period" : 600,
            "sessionThreshold" : 20,
            "urlBlockingMode" : "block-all-urls",
            "usernameThreshold" : 20
         },
         "delayBlocking" : {
            "checkDeviceIdThreshold" : false,
            "checkIpThreshold" : false,
            "checkSessionThreshold" : false,
            "checkUsernameThreshold" : false,
            "period" : 600,
            "violations" : [
               {
                  "name" : "VIOL_GEOLOCATION"
               },
               {
                  "name" : "VIOL_ATTACK_SIGNATURE"
               },
               {
                  "name" : "VIOL_GWT_MALFORMED"
               },
               {
                  "name" : "VIOL_FILE_UPLOAD"
               },
               {
                  "name" : "VIOL_PARAMETER_VALUE_BASE64"
               },
               {
                  "name" : "VIOL_GWT_FORMAT"
               },
               {
                  "name" : "VIOL_REDIRECT"
               }
            ]
         },
         "logAllRequests" : {
            "checkDeviceIdThreshold" : true,
            "checkIpThreshold" : true,
            "checkSessionThreshold" : true,
            "checkUsernameThreshold" : true,
            "deviceIdThreshold" : 7,
            "ipThreshold" : 15,
            "period" : 600,
            "sessionThreshold" : 5,
            "usernameThreshold" : 5
         },
         "sessionTrackingConfiguration" : {
            "enableSessionAwareness" : true,
            "enableTrackingSessionHijackingByDeviceId" : true,
            "userNameSource" : "all-login-pages"
         },
         "violationDetectionActions" : {
            "trackViolationsAndPerformActions" : true,
            "violationDetectionPeriod" : 900
         }
      },
      "signature-sets": [
         {
            "name": "JavaScript Signatures (High/Medium Accuracy)",
            "alarm": true,
            "block": true,
            "learn": true,
            "signatureSet": {
               "filter": {
                  "accuracyFilter": "ge",
                  "accuracyValue": "medium",
                  "hasCve": "all",
                  "lastUpdatedFilter": "all",
                  "riskFilter": "all",
                  "riskValue": "all",
                  "signatureType": "all",
                  "tagFilter": "all",
                  "userDefinedFilter": "all"
               },
               "systems": [
                  {
                     "name": "JavaScript"
                  }
               ],
               "type": "filter-based"
            }
         },
         {
            "name": "Node.js Signatures (High/Medium Accuracy)",
            "alarm": true,
            "block": true,
            "learn": true,
            "signatureSet": {
               "filter": {
                  "accuracyFilter": "ge",
                  "accuracyValue": "medium",
                  "hasCve": "all",
                  "lastUpdatedFilter": "all",
                  "riskFilter": "all",
                  "riskValue": "all",
                  "signatureType": "all",
                  "tagFilter": "all",
                  "userDefinedFilter": "all"
               },
               "systems": [
                  {
                     "name": "Node.js"
                  }
               ],
               "type": "filter-based"
            }
         },
         {
            "name": "jQuery Signatures (High/Medium Accuracy)",
            "alarm": true,
            "block": true,
            "learn": true,
            "signatureSet": {
               "filter": {
                  "accuracyFilter": "ge",
                  "accuracyValue": "medium",
                  "hasCve": "all",
                  "lastUpdatedFilter": "all",
                  "riskFilter": "all",
                  "riskValue": "all",
                  "signatureType": "all",
                  "tagFilter": "all",
                  "userDefinedFilter": "all"
               },
               "systems": [
                  {
                     "name": "jQuery"
                  }
               ],
               "type": "filter-based"
            }
         },
         {
            "name": "MongoDB Signatures (High/Medium Accuracy)",
            "alarm": true,
            "block": true,
            "learn": true,
            "signatureSet": {
               "filter": {
                  "accuracyFilter": "ge",
                  "accuracyValue": "medium",
                  "hasCve": "all",
                  "lastUpdatedFilter": "all",
                  "riskFilter": "all",
                  "riskValue": "all",
                  "signatureType": "all",
                  "tagFilter": "all",
                  "userDefinedFilter": "all"
               },
               "systems": [
                  {
                     "name": "MongoDB"
                  }
               ],
               "type": "filter-based"
            }
         },
         {
            "name": "SQLite Signatures (High/Medium Accuracy)",
            "alarm": true,
            "block": true,
            "learn": true,
            "signatureSet": {
               "filter": {
                  "accuracyFilter": "ge",
                  "accuracyValue": "medium",
                  "hasCve": "all",
                  "lastUpdatedFilter": "all",
                  "riskFilter": "all",
                  "riskValue": "all",
                  "signatureType": "all",
                  "tagFilter": "all",
                  "userDefinedFilter": "all"
               },
               "systems": [
                  {
                     "name": "SQLite"
                  }
               ],
               "type": "filter-based"
            }
         }
      ],
      "signature-settings": {
         "signatureStaging": false
      },
      "urls": [
         {
            "attackSignaturesCheck": true,
            "clickjackingProtection": false,
            "description": "",
            "disallowFileUploadOfExecutables": false,
            "html5CrossOriginRequestsEnforcement": {
               "enforcementMode": "disabled"
            },
            "isAllowed": true,
            "mandatoryBody": false,
            "method": "*",
            "methodsOverrideOnUrlCheck": false,
            "name": "/#/login",
            "performStaging": true,
            "protocol": "http",
            "type": "explicit",
            "urlContentProfiles": [
               {
                  "headerName": "*",
                  "headerOrder": "default",
                  "headerValue": "*",
                  "type": "apply-value-and-content-signatures"
               },
               {
                  "headerName": "Content-Type",
                  "headerOrder": 1,
                  "headerValue": "*form*",
                  "type": "form-data"
               },
               {
                  "contentProfile": {
                     "name": "Default"
                  },
                  "headerName": "Content-Type",
                  "headerOrder": 2,
                  "headerValue": "*json*",
                  "type": "json"
               },
               {
                  "contentProfile": {
                     "name": "Default"
                  },
                  "headerName": "Content-Type",
                  "headerOrder": 3,
                  "headerValue": "*xml*",
                  "type": "xml"
               }
            ]
         }
      ]
   }
}